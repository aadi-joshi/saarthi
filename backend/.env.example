# SUVIDHA 2026 - Environment Configuration
# Copy this file to .env and update values

# Application
APP_NAME=SUVIDHA 2026
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database - PostgreSQL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://suvidha:suvidha@localhost:5432/suvidha
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis - Caching and OTP storage
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption - CHANGE IN PRODUCTION!
# Must be exactly 32 characters
AES_KEY=change-this-32-byte-key-prod123

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# OTP Settings
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# Session
SESSION_TIMEOUT_MINUTES=10

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png
UPLOAD_DIR=./uploads

# CORS - Frontend URLs
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# External Services (Simulated for hackathon)
PAYMENT_GATEWAY_URL=https://api.simulated-payment.local
SMS_GATEWAY_URL=https://api.simulated-sms.local
